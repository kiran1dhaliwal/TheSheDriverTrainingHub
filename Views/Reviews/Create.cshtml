@model TheFinalSheDriverTrainingHub.Models.DB.Review

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-family:'Footlight MT'">Rate Instructor</h1>
<hr />
<div class="row" id="title" style="margin-top:20px">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InstructorFirstName" class="control-label">Instructors First Name</label>
                <input asp-for="InstructorFirstName" class="form-control" />
                <span asp-validation-for="InstructorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorLastName" class="control-label">Instructors Last Name</label>
                <input asp-for="InstructorLastName" class="form-control" />
                <span asp-validation-for="InstructorLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">Your Full Name</label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label">Your Email</label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div style="margin-bottom:20px">
                <b>Rate Instructor below from 1 -5</b>
            </div>
            <div class="row">

                <div class="form-group; col-md-4">
                    <label asp-for="InstructionRating" class="control-label">Instruction Rating</label>
                    <input asp-for="InstructionRating" class="form-control" min=" 1" max=" 5" placeholder="value: 1-5"/>
                    <span asp-validation-for="InstructionRating" class="text-danger"></span>
                </div>
                <div class="form-group; col-md-4">
                    <label asp-for="BehaviourRating" class="control-label">Behaviour Rating</label>
                    <input asp-for="BehaviourRating" class="form-control" min=" 1" max=" 5" placeholder="value: 1-5" />
                    <span asp-validation-for="BehaviourRating" class="text-danger"></span>
                </div>
                <div class="form-group; col-md-4">
                    <label asp-for="PriceRating" class="control-label">Price Rating</label>
                    <input asp-for="PriceRating" class="form-control" min=" 1" max=" 5" placeholder="value: 1-5"  />
                    <span asp-validation-for="PriceRating" class="text-danger"></span>
                </div>

            </div>
            
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input onclick="alert('Thank you! Your rating has been added')" type="submit" value="Submit Rating" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

